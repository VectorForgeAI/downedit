{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MarkdownViewer",
  "version": "1.0.0",
  "identifier": "com.kittl.markdown-viewer",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MarkdownViewer",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "description": "Markdown Document",
        "mimeType": "text/markdown"
      }
    ]
  }
}
